{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule":true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es6","dom"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}