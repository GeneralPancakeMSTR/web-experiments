{    
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",        
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule":true,        
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["ESNext","dom","ES2018.Regexp"],
        "baseUrl": "./",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "isolatedModules": true
    }
}